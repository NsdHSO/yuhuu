# pnpm configuration for React Native/Expo
# Public hoist pattern for packages that need to be accessible from anywhere
public-hoist-pattern[]=*react-native*
public-hoist-pattern[]=*expo*
public-hoist-pattern[]=@react-native/*
public-hoist-pattern[]=@expo/*
public-hoist-pattern[]=react-native-css-interop

# Auto install peers
auto-install-peers=true

# Strict peer dependencies (optional - can disable if causing issues)
strict-peer-dependencies=false
